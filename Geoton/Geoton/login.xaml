<Window x:Class="Geoton.login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="login" Height="155" Width="400" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ResizeMode="NoResize" Icon="clave.png">
    <Grid Background="#FFDC2418">
        <Rectangle Fill="Black" Stroke="Black" RadiusX="4.5" RadiusY="4.5" Margin="135,8,66,0" VerticalAlignment="Top" Height="28"/>
        <Label Height="28" Margin="147,8,78,0" x:Name="label1" VerticalAlignment="Top" Content="Administrador de Preguntas" Foreground="White"/>
        <PasswordBox x:Name="txtPassword"
         ToolTip="Password"
         PasswordChar="*" Margin="126,40,0,0" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Width="209" KeyDown="txtPassword_KeyDown" />
        
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,49,8" x:Name="btn_entrar" VerticalAlignment="Bottom" Width="75" Click="btn_entrar_Click" Content="ENTRAR"/>
        <Button Height="23" Margin="175,0,128,8" x:Name="btn_salir" VerticalAlignment="Bottom" Click="btn_salir_Click" Content="SALIR"/>
        <Image Margin="8,8,0,10" Source="clave.png" Stretch="Fill" HorizontalAlignment="Left" Width="101"/>
    </Grid>
</Window>
